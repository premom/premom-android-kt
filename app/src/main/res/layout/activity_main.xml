<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:paddingTop="35dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/gra">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:indeterminate="false"
                    android:progressDrawable="@drawable/progress_circle"
                    android:background="@drawable/circle_shape"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:max="100"
                    android:progress="65" />

                <TextView
                    android:id="@+id/txtProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/progressBar"
                    android:layout_centerInParent="true"
                    android:paddingBottom="20dp"
                    android:text="3달"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
                <TextView
                    android:id="@+id/txtProgress_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="남았습니다"
                    android:paddingTop="50dp"
                    android:textSize="14dp"
                    android:textColor="@color/white"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="30dp"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:id="@+id/main_txt"
                    android:textColor="@color/white"
                    android:text="프리맘과 함께 엄마가 될 준비를 해 보세요~!"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/bottom_allow" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f9f9f9"
        android:padding="20dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/menu_seat_img"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@null"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:padding="10dp"
                    android:src="@drawable/menu1"/>
                <Button
                    android:id="@+id/menu_seat_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="핑크카펫보기"
                    android:background="@null"
                    android:textColor="#6f6f6f"
                    android:textSize="17dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageButton
                    android:id="@+id/menu_diary_img"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:padding="10dp"
                    android:src="@drawable/menu3"/>
                <Button
                    android:id="@+id/menu_diary_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="육아일기장"
                    android:background="@null"
                    android:textColor="#6f6f6f"
                    android:textSize="17dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:padding="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/menu_mypage_img"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:padding="10dp"
                    android:src="@drawable/person"/>

                <Button
                    android:id="@+id/menu_mypage_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="마이페이지"
                    android:background="@null"
                    android:textColor="#6f6f6f"
                    android:textSize="17dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingRight="10dp"
                android:orientation="vertical">


                <ImageButton
                    android:id="@+id/menu_setting_img"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@null"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:padding="10dp"
                    android:src="@drawable/menu2"/>
                <Button
                    android:id="@+id/menu_setting_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="설정"
                    android:background="@null"
                    android:textColor="#6f6f6f"
                    android:textSize="17dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>